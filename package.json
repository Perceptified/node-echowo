{
  "name": "ts-echowo",
  "version": "0.7.1",
  "description": "Port of win-echowo to node / typescript",
  "main": "index.js",
  "config" : {
    "debugDirectory" : "./build/Debug",
    "releaseDirectory" : "./build/Release",
    "binaryDirectory" : "binaries",
    "dataDirectory" : "data",
    "sourceDataDirectory" : "./src/data/",
    "macOsName" : "macos-arm64",
    "winX64OsName" : "windows-x64",
    "linArmOsName" : "linux-arm64",
    "linX64OsName" : "linux-x64",
    "macOsReleaseDirectory" : "%npm_package_config_releaseDirectory%/%npm_package_config_binaryDirectory%/%npm_package_config_macOsName%",
    "macOsReleaseDataDirectory" : "%npm_package_config_maCosReleaseDirectory%/%npm_package_config_dataDirectory%",
    "winX64ReleaseDirectory" : "%npm_package_config_releaseDirectory%/%npm_package_config_binaryDirectory%/%npm_package_config_winX64OsName%",
    "winX64ReleaseDataDirectory" : "%npm_package_config_winX64ReleaseDirectory%/%npm_package_config_dataDirectory%",
    "linArmReleaseDirectory" : "%npm_package_config_releaseDirectory%/%npm_package_config_binaryDirectory%/%npm_package_config_linArmOsName%",
    "linArmReleaseDataDirectory" : "%npm_package_config_linArmReleaseDirectory/%npm_package_config_dataDirectory%",
    "linX64ReleaseDirectory" : "%npm_package_config_releaseDirectory%/%npm_package_config_binaryDirectory%/%npm_package_config_linX64OsName%",
    "linX64ReleaseDataDirectory" : "%npm_package_config_linX64ReleaseDirectory%/%npm_package_config_dataDirectory%"
  },
  "scripts": {
    "clean": "./build/buildScript.ps1 -mode clean",
    "build": "",
    "runDebug": "",
    "cleanRelease": "",
    "makeBinaryDirector" : "mkdir %npm_package_config_releaseDirectory%/%npm_package_config_binaryDirectory%",
    "makeMacDirectory" : "mkdir %npm_package_config_macOsReleaseDirectory% && mkdir %npm_package_config_macOsReleaseDataDirectory%",
    "makeWinDirectory" : "mkdir %npm_package_config_winX64ReleaseDirectory% && mkdir %npm_package_config_winX64ReleaseDataDirectory%",
    "makeLinARMDirectory" : "mkdir %npm_package_config_linArmReleaseDirectory% && mkdir %npm_package_config_linArmReleaseDataDirectory%",
    "makeLinX64Directory" : "mkdir %npm_package_config_linX64ReleaseDirectory% && mkdir %npm_package_config_linX64ReleaseDirectory%",
    "prepareReleaseDirectory" : "npm run makeBinaryDirector && npm run makeMacDirectory && npm run makeWinDirectory && npm run makeLinARMDirectory && npm run makeLinX64Directory",
    "copyConfigMac" : "cp %npm_package_config_sourceDataDirectory%/config.json %npm_package_config_macOsReleaseDataDirectory%",
    "copyConfigWin" : "cp %npm_package_config_sourceDataDirectory%/config.json %npm_package_config_winX64ReleaseDataDirectory%",
    "copyConfigLinARM" : "cp %npm_package_config_sourceDataDirectory%/config.json %npm_package_config_linArmReleaseDataDirectory%",
    "copyConfigLinX64" : "cp %npm_package_config_sourceDataDirectory%/config.json %npm_package_config_linX64ReleaseDataDirectory%",
    "copyLicenseMac" : "cp ./LICENSE %npm_package_config_macOsReleaseDirectory%/LICENSE.txt",
    "copyLicenseWinX64" : "cp ./LICENSE %npm_package_config_winX64ReleaseDirectory%/LICENSE.txt",
    "copyLicenseLinARM" : "cp ./LICENSE %npm_package_config_linArmReleaseDirectory%/LICENSE.txt",
    "copyLicenseLinX64" : "cp ./LICENSE %npm_package_config_linX64ReleaseDirectory%/LICENSE.txt",
    "compileRelease": "npx tsc --outDir %npm_package_config_releaseDirectory%", 
    "copyLicense" : "npm run copyLicenseMac && npm run copyLicenseWinX64 && npm run copyLicenseLinARM && npm run copyLicenseLinX64",
    "packageRelease": "npm run packageMac && npm run packageWindows && npm run packageLinARM && npm run packageLinX64",
    "packageWindows": "npx pkg $npm_package_config_releaseDirectory/index.js -t $npm_package_config_winX64OsName -o $npm_package_config_winX64ReleaseDirectory/node-echowo.exe",
    "packageMac": "npx pkg build/Release/index.js -t macos-arm64 -o build/Release/binaries/node-echowo-mac-arm64",
    "packageLinARM": "npx pkg build/Release/index.js -t linux-arm64 -o build/Release/binaries/node-echowo-linux-arm64",
    "packageLinX64": "npx pkg build/Release/index.js -t linux-x64 -o build/Release/binaries/node-echowo-linux-x64",
    "buildRelease" : "npm run cleanRelease && npm run prepareReleaseDirectory && npm run compileRelease && npm run copyConfig && npm run copyLicense && npm run packageRelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Perceptified/node-echowo.git"
  },
  "keywords": [
    "uwu",
    "owo"
  ],
  "author": "Markus Aigner",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Perceptified/node-echowo/issues"
  },
  "homepage": "https://github.com/Perceptified/node-echowo#readme",
  "devDependencies": {
    "commander": "^10.0.1",
    "nexe": "^4.0.0-rc.2",
    "typescript": "^5.0.4"
  },
  "pkg": {
    "assets": [
      "build/Release/data/*.json"
    ]
  }
}
